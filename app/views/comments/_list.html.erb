<div class="subhead">Discussion threads</div>
<table class="threads">
  <caption><%=
    controller_name == "comments" ? link_to("Back to all the things".gsub(" ", "&nbsp;").html_safe, root_path) : link_to("See all / post your own".gsub(" ", "&nbsp;").html_safe, comments_path)
%></caption>
<%- unless @comments.empty? -%>
  <tr>
    <th class="title">Title</th>
    <th class="user">User</th>
    <th class="data"></th>
  </tr>
<%- end
    @comments.each do |comment|
      comment_count = comment.comment_threads.first.comment_count -%>
  <tr>
    <td><%= link_to (comment.comment_threads.first.title || "something"), comment_path(comment.id) %></td>
    <td><%= link_to comment.user.handle, comment.user %></td>
    <td><%= pluralize(comment_count - 1, "comment") unless comment_count == 1 %></td>
  </tr>
<%- end -%>
</table>
